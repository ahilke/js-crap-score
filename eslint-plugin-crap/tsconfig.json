{
    "compilerOptions": {
        // Project
        "outDir": "dist/",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node16",

        // Language
        "target": "es2022",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        // Interoperability
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        // Type Checking
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "skipLibCheck": true
    }
}
