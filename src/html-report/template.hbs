<html lang="en">
    <head>
        <title>HTML CRAP Report</title>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0" />

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
        <link
            type="text/css"
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/@materializecss/materialize/dist/css/materialize.min.css"
        />

    </head>

    <body>
        <div class="container">
            {{! TODO: show top 50, each redirecting to a detail page }}
            {{! overview just shows function name, maybe file name, crap score }}
            {{! detail page shows coverage info, complexity, code snippet }}
            <ul class="collection with-header">
                <li class="collection-header"><h4>Crappiest Functions</h4></li>
                {{#each functions}}

                    <li class="collection-item">
                        <span class="title">{{this.functionDescriptor}}</span>

                        <p>
                            CRAP score:
                            {{decimal this.statements.crap}}
                            <br />
                            File:
                            {{this.filePath}}
                        </p>
                    </li>
                {{/each}}
            </ul>
        </div>

        <!--JavaScript at end of body for optimized loading-->
        <script
            type="text/javascript"
            src="https://cdn.jsdelivr.net/npm/@materializecss/materialize/dist/js/materialize.min.js"
        ></script>
    </body>
</html>