{
    "name": "crap-score",
    "version": "1.0.1",
    "description": "Calculate and visualize the CRAP score of a JS/TS project using the provided API or CLI.",
    "license": "MIT",
    "keywords": [
        "CRAP Score",
        "Cyclomatic Complexity",
        "Code Quality",
        "Test Coverage"
    ],
    "author": {
        "name": "Arno Hilke",
        "email": "arno.hilke@tum.de"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ahilke/js-crap-score.git"
    },
    "bugs": {
        "url": "https://github.com/ahilke/js-crap-score/issues"
    },
    "type": "module",
    "main": "./dist/index.js",
    "exports": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "crap": "./dist/crap.js"
    },
    "scripts": {
        "build": "nest build",
        "prepublishOnly": "npm run build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug",
        "start:prod": "node ./dist/main.js",
        "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
        "test:dev": "npm run test -- --watch",
        "test:debug": "node --experimental-vm-modules --no-warnings --inspect ./node_modules/.bin/jest --runInBand",
        "test:cov": "npm run test -- --coverage",
        "test:generate-data": "npm run test -- --config=./test-data/esm/jest.config.ts && jest --config=./test-data/cjs/jest.config.ts",
        "prettier": "prettier --write ."
    },
    "engines": {
        "node": ">=14.21.1",
        "npm": ">=6.14.17"
    },
    "dependencies": {
        "@nestjs/cli": "^9.3.0",
        "@nestjs/common": "^9.3.12",
        "@nestjs/core": "^9.3.12",
        "@types/inquirer": "^8.2.6",
        "@typescript-eslint/parser": "^5.57.0",
        "@typescript-eslint/utils": "^5.57.0",
        "eslint": "^8.36.0",
        "handlebars": "^4.7.7",
        "lodash-es": "^4.17.21",
        "nest-commander": "^3.6.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0"
    },
    "devDependencies": {
        "@nestjs/testing": "^9.3.12",
        "@types/jshint": "^2.12.1",
        "@types/lodash-es": "^4.17.7",
        "prettier": "^2.8.7",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.2"
    }
}
